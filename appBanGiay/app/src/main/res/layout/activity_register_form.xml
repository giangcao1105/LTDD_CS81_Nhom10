<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register_form"
    android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký khách hàng"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtEmail"
                android:layout_marginTop="20dp"
                android:layout_marginStart="70dp"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:autofillHints="no" />

            <EditText
                android:id="@+id/txtSdt"
                android:layout_marginTop="10dp"
                android:layout_marginStart="70dp"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:hint="Số điện thoại"
                android:inputType="phone"
                android:autofillHints="no" />

            <EditText
                android:id="@+id/txtHoTen"
                android:layout_marginTop="10dp"
                android:layout_marginStart="70dp"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:hint="Họ và tên"
                android:inputType="text"
                android:autofillHints="no" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNgaySinh"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="70dp"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:hint="Ngày sinh"
                    android:textSize="18sp"
                    android:autofillHints="no"
                    android:gravity="center_vertical"/>

                <Button
                    android:id="@+id/btn_layNgay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn ngày"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/txtDiaChi"
                android:layout_marginTop="10dp"
                android:layout_marginStart="70dp"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:hint="Địa chỉ"
                android:inputType="text"
                android:autofillHints="no" />

            <EditText
                android:id="@+id/txtMatKhau"
                android:layout_marginTop="10dp"
                android:layout_marginStart="70dp"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:autofillHints="no" />

            <EditText
                android:id="@+id/txtNhapLaiMatKhau"
                android:layout_marginTop="20dp"
                android:layout_marginStart="70dp"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:hint="Nhập lại mật khẩu"
                android:inputType="textPassword"
                android:autofillHints="no" />

            <!-- <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                 <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tôi đồng ý với các điều khoản"
                    android:textSize="20sp"/>

            </LinearLayout> -->

            <Button
                android:id="@+id/btTaoTaiKhoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo tài khoản"
                android:textSize="25sp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>